<Window x:Class="BankSystemWpfControlLibrary.SelectionWindows.EmployeeSelectionWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BankSystemWpfControlLibrary.SelectionWindows"
             mc:Ignorable="d" 
             Height="250" Width="300">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock>Выберите тип сотрудника</TextBlock>
            <ComboBox Name="TypesWorker">
                <TextBlock>Менеджер</TextBlock>
                <TextBlock>Консультант</TextBlock>
            </ComboBox>
            <TextBox x:Name="InputName">Иванов</TextBox>
            <TextBox x:Name="InputSurName">Иван</TextBox>
            <TextBox x:Name="InputPatronymic">Иваныч</TextBox>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Margin="5,5,5,5" IsDefault="True" Click="Accept_Click">ОК</Button>
                <Button Margin="5,5,5,5" IsCancel="True">Отмена</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
